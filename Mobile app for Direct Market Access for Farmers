    'Irrigation Status': ['Optimal', 'Low', 'High']
})

market_data = pd.DataFrame({
    'Crop': ['Wheat', 'Rice', 'Corn'],
    'Market Price (per kg)': [20, 15, 18],
    'Demand (%)': [80, 60, 75]
})

