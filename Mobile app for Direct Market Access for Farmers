import streamlit as st
import pandas as pd
import plotly.express as px

# Title of the app
st.title("Direct Market Access for Farmers")

# Sidebar for navigation
st.sidebar.title("Navigation")
menu = st.sidebar.radio("Select a feature:", ["Overview", "Market Access", "Insights", "Weather Updates"])
import streamlit as st
